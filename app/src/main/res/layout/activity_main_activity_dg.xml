<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.restaurantdg.MainActivityDG"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Restaurante DG"
        android:id="@+id/titulo"
        android:layout_gravity="center_horizontal"
        android:textColor="#0e164b" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="5">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imagen1IB"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:src="@drawable/primera"
            android:layout_marginTop="30dp"
            android:onClick="click1"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen2IB"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/segunda"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click2"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen3IV"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/tercera"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click3"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen4IB"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/cuarta"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click4"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen5IV"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/quinta"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click5"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen6IB"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/sexta"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click6"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/imagen7IV"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/septima"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="click7"/>
    </GridLayout>
</LinearLayout>
